{
  "name": "vue-demo",
  "version": "0.0.0",
  "private": true,
  "description": "A simple demo for new Vuer.",
  "author": {
    "name": "ModyQyW",
    "email": "wurui7@mail3.sysu.edu.cn",
    "url": "https://modyqyw.github.io"
  },
  "license": "MIT",
  "scripts": {
    "dev": "vue-cli-service serve",
    "build": "vue-cli-service build --report",
    "check": "ncu",
    "commit": "cz",
    "i18n:report": "vue-cli-service i18n:report --src './src/**/*.?(js|vue)' --locales './src/i18n/locales/*.json'",
    "lint": "yarn lint:json && yarn lint:markdown && yarn lint:script && yarn lint:style && yarn lint:ls",
    "lint:json": "prettier ./**/*.json --write",
    "lint:markdown": "markdownlint . --fix",
    "lint:script": "vue-cli-service lint --fix",
    "lint:style": "stylelint ./**/*.{css,less,sass,scss,vue} --fix",
    "lint:ls": "ls-lint ."
  },
  "dependencies": {
    "@mdi/font": "~5.9.55",
    "core-js": "~3.10.1",
    "lodash-es": "~4.17.21",
    "nprogress": "~0.2.0",
    "roboto-fontface": "~0.10.0",
    "vue": "~2.6.12",
    "vue-i18n": "~8.24.3",
    "vue-router": "~3.5.1",
    "vuetify": "~2.4.9",
    "vuex": "~3.6.2"
  },
  "devDependencies": {
    "@babel/core": "~7.13.15",
    "@babel/eslint-parser": "~7.13.14",
    "@commitlint/cli": "~12.1.1",
    "@intlify/vue-i18n-loader": "~1.1.0",
    "@ls-lint/ls-lint": "~1.9.2",
    "@modyqyw/fabric": "~1.27.0",
    "@types/node": "~14.14.37",
    "@vue/cli-plugin-babel": "~4.5.12",
    "@vue/cli-plugin-eslint": "~4.5.12",
    "@vue/cli-plugin-router": "~4.5.12",
    "@vue/cli-plugin-unit-jest": "~4.5.12",
    "@vue/cli-plugin-vuex": "~4.5.12",
    "@vue/cli-service": "~4.5.12",
    "commitizen": "~4.2.3",
    "compression-webpack-plugin": "~6.1.1",
    "eslint": "~7.24.0",
    "husky": "~6.0.0",
    "is-ci": "~3.0.0",
    "lint-staged": "~10.5.4",
    "markdownlint-cli": "~0.27.1",
    "npm-check-updates": "~11.4.1",
    "prettier": "~2.2.1",
    "sass": "~1.32.8",
    "sass-loader": "~10.1.1",
    "stylelint": "~13.12.0",
    "stylelint-webpack-plugin": "~2.1.1",
    "vue-cli-plugin-i18n": "~2.1.0",
    "vue-cli-plugin-vuetify": "~2.3.1",
    "vue-template-compiler": "~2.6.12",
    "vuetify-loader": "~1.7.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">=12 <13"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint:ls && lint-staged"
    }
  },
  "lint-staged": {
    "*.json": "prettier --write",
    "*.md": "markdownlint --fix",
    "*.{js,jsx,ts,tsx,vue}": "vue-cli-service --fix",
    "*.{css,less,scss,vue}": "stylelint --fix"
  }
}
