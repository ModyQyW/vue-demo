{
  "name": "vue-todo-list-demo",
  "version": "0.0.0",
  "private": true,
  "description": "A todo list demo for new Vuer.",
  "author": {
    "name": "ModyQyW",
    "email": "wurui7@mail3.sysu.edu.cn",
    "url": "https://modyqyw.github.io"
  },
  "license": "MIT",
  "scripts": {
    "serve": "vue-cli-service serve",
    "dev": "vue-cli-service serve",
    "build": "vue-cli-service build --report",
    "lint": "npm run lint:script && npm run lint:style && npm run lint:ls",
    "commit": "git-cz && git push",
    "lint:script": "vue-cli-service lint",
    "lint:style": "stylelint ./src/**/*.scss --fix",
    "lint:ls": "ls-lint"
  },
  "dependencies": {
    "@mdi/font": "^5.6.55",
    "@vue/composition-api": "^1.0.0-beta.14",
    "core-js": "^3.6.5",
    "roboto-fontface": "^0.10.0",
    "vue": "^2.6.12",
    "vue-router": "^3.4.5",
    "vuetify": "^2.3.12",
    "vuex": "^3.5.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@ls-lint/ls-lint": "^1.9.2",
    "@modyqyw/eslint-config-vue": "^1.8.0",
    "@modyqyw/prettier-config": "^1.1.3",
    "@modyqyw/stylelint-config": "^1.0.0",
    "@vue/cli-plugin-babel": "^4.5.6",
    "@vue/cli-plugin-eslint": "^4.5.6",
    "@vue/cli-plugin-router": "^4.5.6",
    "@vue/cli-plugin-vuex": "^4.5.6",
    "@vue/cli-service": "^4.5.6",
    "babel-eslint": "^10.1.0",
    "commitizen": "^4.2.1",
    "compression-webpack-plugin": "^6.0.2",
    "eslint": "^7.10.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "sass": "^1.26.11",
    "sass-loader": "^10.0.2",
    "stylelint": "^13.7.2",
    "stylelint-webpack-plugin": "^2.1.0",
    "vue-cli-plugin-vuetify": "^2.0.7",
    "vue-template-compiler": "^2.6.12",
    "vuetify-loader": "^1.6.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/**/*.scss": [
      "prettier --write",
      "stylelint --fix"
    ],
    "./src/**/*.{js,jsx}": [
      "prettier --write",
      "vue-cli-service lint"
    ],
    "./src/**/*.vue": [
      "vue-cli-service lint",
      "stylelint --fix"
    ],
    ".": [
      "ls-lint"
    ]
  }
}
